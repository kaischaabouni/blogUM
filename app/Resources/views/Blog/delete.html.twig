{% extends 'base.html.twig' %}

{% block title %}
    Supprimer
{% endblock %}

{% block content %}
    <div class="col-lg-8">
        <div class="mt-4">
            <p> Voulez-vous vraiment supprimer le post "{{post.title}}" ? </p>
            {{ form_start(form) }}
            {{ form_widget(form.delete, {label: 'Supprimer', attr: {class: 'btn btn-danger'}}) }}  
            {{ form_end(form) }}
        </div>  
    </div>  

{% endblock %}
